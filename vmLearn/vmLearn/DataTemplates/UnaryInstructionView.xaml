<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
					xmlns:vmLearn="clr-namespace:vmLearn"
					xmlns:vmCode="clr-namespace:vm.Code;assembly=vm">
	<DataTemplate DataType="{x:Type vmCode:UnaryInstruction}">
		<Grid>
			<Grid.ColumnDefinitions>
				<ColumnDefinition SharedSizeGroup="NameColumn"/>
				<ColumnDefinition />
			</Grid.ColumnDefinitions>
			<TextBlock Grid.Column="0" Margin="0,0,8,0" Text="{Binding Name}" />
			<ContentControl Grid.Column="1" Content="{Binding Operand}" />
		</Grid>
	</DataTemplate>
</ResourceDictionary>