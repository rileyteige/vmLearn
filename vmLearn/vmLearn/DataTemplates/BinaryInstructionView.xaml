<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
					xmlns:vmCode="clr-namespace:vm.Code;assembly=vm">
	<DataTemplate DataType="{x:Type vmCode:BinaryInstruction}">
		<Grid>
			<Grid.ColumnDefinitions>
				<ColumnDefinition SharedSizeGroup="NameColumn"/>
				<ColumnDefinition />
				<ColumnDefinition />
			</Grid.ColumnDefinitions>
			<TextBlock Grid.Column="0" Margin="0,0,8,0" Text="{Binding Name}" />
			<ContentControl Grid.Column="1" Margin="0,0,8,0" Content="{Binding LeftOperand}" />
			<ContentControl Grid.Column="2" Content="{Binding RightOperand}" />
		</Grid>
	</DataTemplate>
</ResourceDictionary>